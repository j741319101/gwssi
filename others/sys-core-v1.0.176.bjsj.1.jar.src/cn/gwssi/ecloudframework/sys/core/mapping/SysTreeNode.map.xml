<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.gwssi.ecloudframework.sys.core.dao.SysTreeNodeDao">
    <resultMap id="SysTreeNode" type="cn.gwssi.ecloudframework.sys.core.model.SysTreeNode">
        <id property="id" column="id_" jdbcType="VARCHAR"/>
        <result property="key" column="key_" jdbcType="VARCHAR"/>
        <result property="name" column="name_" jdbcType="VARCHAR"/>
        <result property="desc" column="desc_" jdbcType="VARCHAR"/>
        <result property="treeId" column="tree_id_" jdbcType="VARCHAR"/>
        <result property="parentId" column="parent_id_" jdbcType="VARCHAR"/>
        <result property="path" column="path_" jdbcType="VARCHAR"/>
        <result property="sn" column="sn_" jdbcType="NUMERIC"/>
		<result property="icon" column="icon_" jdbcType="VARCHAR"/>
		<result property="appName" column="application_name_" jdbcType="VARCHAR"/>
		<result property="createBy" column="create_by_" jdbcType="VARCHAR"/>
		<result property="createTime" column="create_time_" jdbcType="TIMESTAMP"/>
    </resultMap>

    <insert id="create" parameterType="cn.gwssi.ecloudframework.sys.core.model.SysTreeNode">
		INSERT INTO sys_tree_node
		(id_,key_,name_,desc_,tree_id_,parent_id_,path_,sn_,icon_,application_name_,create_by_,create_time_)
		VALUES 
		(#{id,jdbcType=VARCHAR}, #{key,jdbcType=VARCHAR}, #{name,jdbcType=VARCHAR}, #{desc,jdbcType=VARCHAR}, #{treeId,jdbcType=VARCHAR}, #{parentId,jdbcType=VARCHAR}, #{path,jdbcType=VARCHAR}, #{sn,jdbcType=NUMERIC}, #{icon,jdbcType=VARCHAR}, #{appName,jdbcType=VARCHAR}, #{createBy,jdbcType=VARCHAR}, #{createTime,jdbcType=TIMESTAMP})
	</insert>

    <select id="get" parameterType="java.lang.String" resultMap="SysTreeNode">
		SELECT * FROM sys_tree_node 
		WHERE 
		id_=#{id}
	</select>

    <select id="query" parameterType="java.util.Map" resultMap="SysTreeNode">
        SELECT * FROM sys_tree_node onode
        <where>
            <if test="whereSql!=null">
                ${whereSql}
            </if>
            <if test="parentkey!=null">
				exists (select 1 from sys_tree_node inode where key_ = '${parentkey}' and onode.parent_id_ = inode.id_)
			</if>
        </where>
        <if test="orderBySql!=null">
            ORDER BY ${orderBySql}
        </if>
        <if test="orderBySql==null">
            ORDER BY id_ DESC
        </if>
    </select>

    <update id="update" parameterType="cn.gwssi.ecloudframework.sys.core.model.SysTreeNode">
		UPDATE sys_tree_node SET
		key_=#{key,jdbcType=VARCHAR},
		name_=#{name,jdbcType=VARCHAR},
		icon_=#{icon,jdbcType=VARCHAR},
		desc_=#{desc,jdbcType=VARCHAR},
		tree_id_=#{treeId,jdbcType=VARCHAR},
		parent_id_=#{parentId,jdbcType=VARCHAR},
		<if test="path != null">
			path_ = #{path,jdbcType=VARCHAR},
		</if>
		sn_=#{sn,jdbcType=NUMERIC},
		application_name_=#{appName,jdbcType=VARCHAR}
		WHERE
		id_=#{id}
	</update>

    <delete id="remove" parameterType="java.lang.String">
		DELETE FROM sys_tree_node 
		WHERE
		id_=#{id}
	</delete>

    <delete id="removeByTreeId" parameterType="java.lang.String">
		DELETE FROM sys_tree_node 
		WHERE
		tree_id_=#{treeId}
	</delete>
	
	<delete id="removeByPath" parameterType="java.lang.String">
		DELETE FROM sys_tree_node 
		WHERE
		path_ like #{path}
	</delete>

	<update id="chageOrder" parameterType="cn.gwssi.ecloudframework.sys.api.model.SysNodeOrderParam">
		update sys_tree_node set sn_=#{sn,jdbcType=NUMERIC} where id_=#{id}
	</update>

	<select id="getCountByStartWithPath" parameterType="java.lang.String" resultType="java.lang.Integer">
		SELECT count(*) FROM sys_tree_node
		WHERE
			path_ like #{path,jdbcType=VARCHAR}
	</select>
	<delete id="removeAll" parameterType="java.lang.String">
		DELETE
		FROM sys_tree_node
	</delete>
</mapper>